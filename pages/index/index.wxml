<!--index.wxml-->
<view class="page">
  <view class="page__hd">
  </view>
  <view class="page__bd">

    <scroll-view scroll-top="{{scrollTop}}" scroll-y="true" style="height:{{scrollHeight}}px;" class="list" bindscrolltolower="bindDownLoad" bindscroll="scroll" bindscrolltoupper="refresh">
      <block wx:if="{{list.length>0}}">
        <block wx:for="{{list}}">
          <view class="item weui-cells weui-cells_after-title">
            <view class="weui-cell">
              <view class="text" data-id="{{item.objectId}}" bindtap="listAction">
                <text class="title weui-cell__bd">{{index+1}}、</text>              
                <text class="title weui-cell__bd">{{item.title}}</text>
                <text class="title weui-cell__bd">{{item.content}}</text>
                <!--<text class="content weui-cell__ft">{{item.content}}</text>-->
              </view>
            </view>
          </view>
        </block>
      </block>
      <block wx:else>
        <view class="weui-media-box weui-media-box_text">
          <view class="weui-media-box__title weui-media-box__title_in-text">
            码赚
            </view>
          <view class="weui-media-box__desc">
          by Kn0w thyself
          </view>

        </view>
      </block>
    </scroll-view>
    <view class="body-view">
      <loading hidden="{{hidden}}" bindchange="loadingChange">
        加载中...
      </loading>
    </view>
  </view>
</view>